{% extends 'accueil.html.twig' %}
{% block title %}Mes annonces{% endblock %}

{% block body %}
    <h1>Liste d'annonces</h1>

    <table>
        <thead>
            <tr>
                
                <th>Titre</th>
                <th>Image</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Vendeur</th>
                <th>Date</th>
                <th>Heure</th>
                <th>Telephone</th>
                <th>Categorie</th>
                <th>Localite</th>
                <th>Actions</th>
                
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                
                <td>{{ annonce.titre }}</td>
                <td><img class="image img-responsive" src ="{{asset('uploads/img/'~annonce.img)}}" alt="{{annonce.img}}"/></td>
                <td>{{ annonce.description }}</td>
                <td>{{ annonce.prix }} €</td>
                <td>{{ annonce.vendeur }}</td>
                <td>{{ annonce.dateparution|date("d/m/y") }}</td>
                <td>{{ annonce.dateparution|date("H:i")}}</td>
                <td>{{ annonce.telephone }}</td>
                <td>{{ annonce.categorie }}</td>
                <td>{{ annonce.localite }}</td>
                <td>
                    
                    <a href="{{ path('show', { 'id': annonce.id }) }}">
                        <button type="button" class="btn btn-default">Afficher</button></a>
                    
                    <a href="{{ path('edit', { 'id': annonce.id }) }}">
                        <button type="button" class="btn btn-default">Modifier</button></a>
                        
                    
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   
    <a href="{{ path('new') }}">
        <button type="button" class="btn btn-default">Créer une nouvelle annonce</button></a>
        
    
{% endblock %}
