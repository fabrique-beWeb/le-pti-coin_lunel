{% extends 'accueil.html.twig' %}
{% block title %}Mes annonces{% endblock %}

{% block body %}
    <h2>Liste d'annonces</h2>

   <table class="table">
        <thead>
            <tr>
                
                <th>Titre</th>
                <th>Image</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Vendeur</th>
                <th>Dateparution</th>
                <th>Heure</th>
                <th>Telephone</th>
                <th>Categorie</th>
                <th>Localite</th>
                <th id="act">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                
                <td>{{ annonce.titre }}</td>
                <td>{{ annonce.img }}</td>
                <td>{{ annonce.description }}</td>
                <td>{{ annonce.prix }}</td>
                <td>{{ annonce.vendeur }}</td>
                <td>{{ annonce.dateparution|date("d/m/y") }}</td>
                <td>{{annonce.dateparution|date("H:i")}}</td>
                <td>{{ annonce.telephone }}</td>
                <td>{{ annonce.categorie }}</td>
                <td>{{ annonce.localite }}</td>
                <td id="glyph">
                    <a href="{{ path('show', { 'id': annonce.id }) }}">
                        <span class="glyphicon glyphicon-pencil afficher">
                        <p id="aff">Afficher</p></span></a>
                    <a href="{{ path('edit', { 'id': annonce.id }) }}">
                        <span class="glyphicon glyphicon-pencil modifier">
                        <p id="modi">Modifier</p></span></a>
                        
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('new') }}">
    <button type="button" class="btn btn-default">Cr√©er une nouvelle annonce</button></a>
    
        
    
{% endblock %}
