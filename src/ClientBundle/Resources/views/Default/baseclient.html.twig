<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Bienvenue sur le petit coin{% endblock %}</title>
        {% block stylesheets %}
        <link href="{{ asset('../vendor/twbs/bootstrap/dist/css/bootstrap.css') }}" rel="stylesheet" />
        <link href="{{ asset('/css/style.css') }}" rel="stylesheet" />
        {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>

{% block nav %}
    <nav class="navbar">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="{{ path('client') }}">Le Pti Coin</a>
          </div>
          <div>
            <ul class="nav navbar-nav">
                <li><a href="{{ path('client') }}">Accueil client</a></li>
                <li><a href="{{ path('new') }}">Déposer une annonce</a></li>
                {%if app.user.username is defined%}
                <li><a href="{{ path('accueil') }}">Mon compte</a></li>
                <li><a href="{{ path('logout') }}">Se déconnecter</a></li>
                {%else%}
                <li><a href="{{ path('login') }}">Se connecter</a></li>
                {%endif%}
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
{% endblock %}

    {% block body %}
    {% endblock %}
    
    
{% block javascripts %}{% endblock %}
</body>
</html>
